{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "type": "object",
    "title": "Server Entity",
    "description": "Behavior pack entity definition",
    "properties": {
        "format_version": {
            "type": "string"
        },
        "minecraft:entity": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string",
                            "description": "ID used to reference and summon entity"
                        },
                        "is_spawnable": {
                            "type": "boolean",
                            "default": true
                        },
                        "is_summonable": {
                            "type": "boolean",
                            "default": true
                        },
                        "is_experimental": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                },
                "component_groups": {
                    "type": "object",
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/components.schema.json"
                        }
                    }
                },
                "components": {
                    "type": "object",
                    "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/components.schema.json"
                },
                "events": {
                    "type": "object",
                    "allOf": [
                        { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/built-in_events.schema.json" },
                        {
                            "patternProperties": {
                                "^.+$": {
                                    "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/types/event.schema.json"
                                }
                            },
                            "additionalProperties": false,
                            "default": {}
                        }
                    ]
                }
            }
        }
    },
    "required": ["minecraft:entity"]
}